<%- include('./partials/header.ejs') -%>

<h1>Edit Poem</h1>
<form class="submittable" action="/poems/<%=poem.id%>?_method=PUT" method="post">
  <div class="form-group">
  <label for="title">Title:</label>
  <br/>
  <input class="form-control" type="text" name="title" value="<%=poem.title%>">
  </div>
  <br/>
  <div class="form-group">
  <label for="author" >Author:</label>
  <br/>
  <input class="form-control" type="text" value="<%=poem.author%>" name="author">
  </div>
  <br/>
  <div class="form-group">
  <label for="content" ></label>
  <textarea class="form-control" id="textarea" name="content" rows="8" cols="80"><%=poem.content%></textarea>
  </div>
  <br/>
  <input type="submit" name="" value="Submit" class="btn btn-primary">
</form>


<%- include('./partials/footer.ejs') -%>
